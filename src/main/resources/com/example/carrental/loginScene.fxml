<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane" prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.carrental.loginController">
   <children>
      <ImageView fitHeight="800.0" fitWidth="1280.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../login%20screen%20small.jpg" />
         </image>
      </ImageView>
      <TextField fx:id="email" cache="true" layoutX="812.0" layoutY="374.0" prefHeight="26.0" prefWidth="363.0" promptText="EMail" style="-fx-text-fill: white;" styleClass="text-field" stylesheets="@textfields.css">
         <font>
            <Font size="24.0" />
         </font>
      </TextField>
      <PasswordField fx:id="password" layoutX="812.0" layoutY="474.0" opacity="0.96" prefHeight="26.0" prefWidth="363.0" promptText="Password" style="-fx-text-fill: white;" styleClass="text-field" stylesheets="@textfields.css">
         <font>
            <Font size="24.0" />
         </font>
      </PasswordField>
      <Button fx:id="LoginButton" layoutX="1076.0" layoutY="553.0" mnemonicParsing="false" onAction="#logintrans" prefHeight="58.0" prefWidth="121.0" stylesheets="@buttons.css" text="Login" textFill="WHITE">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Button>
      <Button fx:id="signupButtonLogin" layoutX="812.0" layoutY="553.0" mnemonicParsing="false" onAction="#signuptrans2" prefHeight="58.0" prefWidth="121.0" stylesheets="@buttons.css" text="signup" textFill="WHITE">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
